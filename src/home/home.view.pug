extends ../shared/views/layout.pug
include ../shared/components/card/card-component.pug
include ../shared/views/mixins/js-loader.pug
include ../shared/views/mixins/style-loader.pug
  
block content
  +style-loader('/assets/css/home/home.style.css')
  +style-loader('/assets/css/shared/components/card/card-component.style.css')
  h1 Typescript Starter (#{global.appVersion})
  p Welcome to a simpler way to build dynamic websites adhering to the principle of progressive enhancement.
  p As a point of reference I give you #[a(href="http://motherfuckingwebsite.com/") the ultimate website]
  <hr>
  +card-component()(id="card-1" data-meta="meta data v1")
    p Card Component 1
  +card-component()(id="card-2" data-meta="meta data v2")
    p Card Component 2
  +card-component()(id="card-3" data-meta="meta data v3")
    p Card Component 3
  +js-loader([
    '/home/home.script.js',
    '/shared/components/card/card-component.script.js'
  ])