{
  "name": "flosports-web",
  "version": "0.0.0",
  "description": "Production ready Typescript+Express starter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickmichalina/typescript-starter"
  },
  "author": {
    "name": "Patrick Michalina",
    "email": "patrickmichalina@mac.com",
    "url": "https://github.com/patrickmichalina"
  },
  "scripts": {
    "test": "nyc mocha --opts ./mocha.opts",
    "test.watch": "mocha --opts ./mocha.opts -w --watch-extensions ts",
    "cp": "copyfiles -f \"{!(_public),.dist/}**/*.{script,script.js}.{js,js,map}\" .dist/_public/scripts",
    "copy.scripts": "nodemon -e {js} --ignore .dist/_public -w .dist -x npm run cp",
    "tsc": "tsc",
    "build.scripts": "tsc -p tsconfig.scripts.json",
    "build.scripts.watch": "tsc -p tsconfig.scripts.json -w",
    "build.styles": "node-sass src -o .dist/.public/css -q",
    "build.styles.watch": "node-sass src -o .dist/.public/css -w -q",
    "start.dev": "npm run build.styles && npm run build.styles.watch & npm run build.scripts.watch & nodemon -e ts -d 5ms -w src -w .dist/.public/**/*.* --ignore src/**/*.script.ts -x ts-node src/server.ts || true",
    "lint": "tslint --project tsconfig.json --config tslint.json"
  },
  "dependencies": {
    "express": "^4.16.3",
    "pug": "^2.0.3",
    "typescript-monads": "^3.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.4",
    "@types/pug": "^2.0.4",
    "chai": "^4.2.0",
    "copyfiles": "^2.1.0",
    "dotenv": "^6.0.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.3",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "source-map-support": "^0.5.9",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-immutable": "^4.7.0",
    "typescript": "^3.1.1"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text-summary"
    ],
    "all": true
  },
  "engines": {
    "node": "= 10.11.0",
    "npm": "= 6.4.1"
  }
}
