{
  "name": "flosports-web",
  "version": "0.0.0",
  "description": "Production ready Typescript+Express starter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickmichalina/typescript-starter"
  },
  "author": {
    "name": "Patrick Michalina",
    "email": "patrickmichalina@mac.com",
    "url": "https://github.com/patrickmichalina"
  },
  "scripts": {
    "test": "nyc mocha --opts ./mocha.opts",
    "test.watch": "mocha --opts ./mocha.opts -w --watch-extensions ts",
    "copy.views": "cpx \"src/**/*.{pug,pug}\" .dist",
    "copy.views.watch": "cpx \"src/**/*.{pug,pug}\" .dist -w -v",
    "compile": "node_modules/.bin/tsc",
    "start.dev": "concurrently \"npm run copy.views.watch\" \"tsc -w & npm run styles.watch\" \"nodemon --delay 15ms -w .dist .dist/server.js\"",
    "styles": "mkdir -p .dist/_public/css && node_modules/.bin/stylus src/**/*.styl -o .dist/_public/css",
    "styles.watch": "mkdir -p .dist/_public/css && node_modules/.bin/stylus -w src/**/*.styl -o .dist/_public/css",
    "lint": "tslint --project tsconfig.json --config tslint.json"
  },
  "dependencies": {
    "dotenv": "^6.0.0",
    "express": "^4.16.3",
    "pug": "^2.0.3",
    "typescript": "^3.1.1",
    "typescript-monads": "^3.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.6",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.4",
    "@types/pug": "^2.0.4",
    "chai": "^4.2.0",
    "concurrently": "^4.0.1",
    "cpx": "^1.5.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.0.1",
    "source-map-support": "^0.5.9",
    "stylus": "^0.54.5",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-immutable": "^4.7.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text-summary"
    ],
    "all": true
  },
  "engines": {
    "node": "= 10.11.0",
    "npm": "= 6.4.1"
  }
}
