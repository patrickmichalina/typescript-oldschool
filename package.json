{
  "name": "flosports-web",
  "version": "0.0.0",
  "description": "Production ready Typescript+Express starter",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/patrickmichalina/typescript-starter"
  },
  "author": {
    "name": "Patrick Michalina",
    "email": "patrickmichalina@mac.com",
    "url": "https://github.com/patrickmichalina"
  },
  "scripts": {
    "tsc": "tsc",
    "test.unit": "nyc mocha --opts ./mocha.opts",
    "test.unit.watch": "mocha --opts ./mocha.opts -w --watch-extensions ts",
    "test.http": "mocha --opts ./mocha.http.opts",
    "test.e2e.local.gui": "cypress open -- --steps",
    "test.e2e.local.headless": "cypress run -- --steps",
    "build.scripts": "tsc -p tsconfig.scripts.json",
    "build.scripts.watch": "tsc -p tsconfig.scripts.json -w",
    "build.styles": "node-sass src -o .dist/wwwroot/css -q --output-style compressed",
    "build.styles.watch": "node-sass src -o .dist/wwwroot/css -w -q --output-style compressed",
    "build.prod": "npm run build.scripts && npm run wwwroot && npm run build.styles && ts-node tools/build/pwa && npm run uglify && npm run compress && tsc",
    "start": "rm -rf .dist && npm run wwwroot.watch & npm run build.styles && npm run build.styles.watch & npm run build.scripts.watch & ts-node tools/build/pwa & nodemon || true",
    "start.prod": "rm -rf .dist && npm run build.prod && NODE_ENV=production node .dist/index",
    "lint": "tsc && tslint --project tsconfig.json --config tslint.json",
    "compress": "ts-node tools/build/compress",
    "uglify": "ts-node tools/build/uglify.ts",
    "heroku-postbuild": "npm run build.prod",
    "wwwroot": "cpx \"src/wwwroot/**/**\" .dist/wwwroot",
    "wwwroot.watch": "cpx \"src/wwwroot/**/**\" .dist/wwwroot --watch"
  },
  "nodemonConfig": {
    "ext": "ts",
    "exec": "ts-node -r dotenv/config src/index.ts",
    "watch": [
      "src"
    ],
    "ignore": [
      "src/**/*.spec-ui.ts",
      "src/**/*.spec-http.ts",
      "src/**/*.spec-unit.ts",
      "src/**/*.script.ts"
    ]
  },
  "dependencies": {
    "compression": "^1.7.3",
    "express": "^4.16.4",
    "express-minify-html": "^0.12.0",
    "express-static-gzip": "^1.1.3",
    "pug": "^2.0.3",
    "staticify": "^3.3.1",
    "throng": "^4.0.0",
    "typescript-monads": "^3.12.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/glob": "^7.1.1",
    "@types/jquery": "^3.3.29",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.13.7",
    "@types/pug": "^2.0.4",
    "@types/supertest": "^2.0.7",
    "@types/throng": "^4.0.2",
    "chai": "^4.2.0",
    "cpx": "^1.5.0",
    "cypress": "^3.2.0",
    "dotenv": "^7.0.0",
    "glob": "^7.1.3",
    "html-validator": "^4.0.1",
    "mocha": "^6.1.4",
    "most": "^1.7.3",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.11",
    "nyc": "^14.1.0",
    "source-map-support": "^0.5.12",
    "supertest": "^4.0.2",
    "terser": "^3.17.0",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-immutable": "^5.5.2",
    "typescript": "^3.4.5",
    "workbox-build": "4.3.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "text-summary"
    ],
    "all": true
  },
  "engines": {
    "node": "= 11.14.0"
  }
}
